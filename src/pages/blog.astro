---
// Importar el Layout
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/posts/*.md"); // Retorna un array de objetos de los posts
const pageTitle = "Mi blog de Astro aprendizaje";
---

<BaseLayout pageTitle={pageTitle}>
  <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
  <ul>
    <!-- Mostrar las entradas estáticamente de mis post-->
    <!-- <li><a href="/posts/post-1/">Publicación 1</a></li>
    <li><a href="/posts/post-2/">Publicación 2</a></li>
    <li><a href="/posts/post-3/">Publicación 3</a></li> -->

    <!-- Mostrar las entradas dinámicamente de mis post-->

    {
      allPosts.map((post) => (
        <BlogPost
          url={post.url}
          title={post.frontmatter.title}
          description={post.frontmatter.description}
        />
      ))
    }
  </ul>
</BaseLayout>
